= form_for @quote do |f|
  - if @quote.errors.any?
    #error_explanation
      %h2= "#{pluralize(@quote.errors.count, "error")} prohibited this quote from being saved:"
      %ul
        - @quote.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :quote
    = f.text_area :quote
  .field
    = f.label :author_id
    = f.number_field :author_id
  .actions
    = f.submit 'Save'
